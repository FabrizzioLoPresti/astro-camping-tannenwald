---
import Button from "../Button.astro";

interface Props {
  title: string;
  href: string;
  urlImage: string;
  backgroundLeft?: boolean;
}

const { title, href, urlImage, backgroundLeft } = Astro.props;
---

<div
  class:list={[
    "md:grid md:grid-cols-2 md:grid-rows-2 h-[660px] flex flex-col justify-end bg-center bg-no-repeat bg-auto md:bg-contain",
    {
      "md:bg-left-top": backgroundLeft,
      "md:bg-right-top": !backgroundLeft,
    },
  ]}
  style={`background-image: url(${urlImage});`}
>
  <div
    class:list={[
      "bg-customColor-50 flex flex-col gap-y-4 justify-between px-2 md:px-6 py-2 md:py-4",
      {
        "col-start-2 col-end-3 row-start-1 row-end-2": backgroundLeft,
        "col-start-1 col-end-2 row-start-2 row-end-3": !backgroundLeft,
      },
    ]}
  >
    <h3 class="font-extrabold text-2xl md:text-4xl text-customColor-500">
      {title}
    </h3>
    <div class="flex flex-col gap-y-4">
      <p class="font-semibold text-customColor-400 text-base md:text-lg">
        <slot />
      </p>
      <Button href={href} dark={true}>Ver m√°s</Button>
    </div>
  </div>
</div>
