---
interface Cabin {
  title: string;
  images: string[];
}

const { title, images } = Astro.props;
---

<div>
  <h2 class="font-bold text-3xl text-customColor-200">
    Cabaña <span class="text-customColor-300">{title}</span>
  </h2>
  <p class="w-full lg:w-3/4 text-customColor-200 text-sm">
    Ingreso a partir de las 14 hs. Salida a las 11 hs. (Se pueden quedar en el
    predio del camping como visitantes hasta la tarde). Reservas y tarifas
    exclusivamente por correo electrónico a campingcabanas@gmail.com
  </p>
  <div class="my-6 flex flex-col lg:flex-row gap-4 lg:items-center">
    <img
      src={images[0]}
      alt="Sobre Nosotros"
      width="300"
      height="250"
      class="w-full lg:w-[480px] xl:w-[600px] h-64 lg:h-auto object-cover rounded-lg shadow-lg"
    />
    <p class="text-customColor-200 text-lg">
      <slot />
    </p>
  </div>

  <div class="w-full lg:grid lg:grid-cols-2 gap-4">
    {
      images.map((image: string) => (
        <img
          src={image}
          alt="Cabaña hasta 4 personas"
          width="300"
          height="250"
          class="w-full h-[450px] object-cover rounded-lg shadow-lg"
        />
      ))
    }
  </div>
</div>
