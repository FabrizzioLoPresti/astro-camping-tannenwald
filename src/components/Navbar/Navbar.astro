---
import MenuNavbar from "./MenuNavbar";
---

<header class="fixed top-0 right-0 left-0 z-30 border-none" id="header">
  <div
    class="flex flex-row items-center justify-between mx-auto container py-4 px-12 sm:px-16 md:px-24 lg:px-32 xl:px-40 2xl:px-48 text-white"
  >
    <a href="/">
      <img
        src="./logo.svg"
        alt="Logo Camping Tannenwald"
        class="w-40 lg:w-64 h-20 animate-fade-right animate-once animate-ease-in-out"
        width="256"
        height="80"
      />
    </a>

    <nav>
      <MenuNavbar client:visible transition:persist />
    </nav>

    <a
      href="/"
      class="hidden md:flex font-bold text-4xl md:text-lg md:flex-row md:gap-4 md:items-center md:animate-fade-left md:animate-once md:animate-ease-in-out"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-phone-call"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"
        ></path>
        <path d="M15 7a2 2 0 0 1 2 2"></path>
        <path d="M15 3a6 6 0 0 1 6 6"></path>
      </svg>
       Llamar
    </a>
  </div>
</header>

<script>
  const header = document.getElementById("header");
  const headerHeight = header?.offsetHeight;
  const headerScroll = () => {
    if (header && headerHeight && window.scrollY > headerHeight) {
      header.classList.add("backdrop-blur-sm");
    } else {
      header?.classList.remove("backdrop-blur-sm");
    }
  };
  window.addEventListener("scroll", headerScroll);
</script>
